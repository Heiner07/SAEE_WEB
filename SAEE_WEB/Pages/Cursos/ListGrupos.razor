@inject GruposServices gruposServices
@inject NavigationManager  navegar

@if (grupos == null)
{
    <text> Cargando... </text>
}
else if (grupos.Count == 0)
{
    <text> No hay grupos en la base de datos</text>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Grupo</th>
                <th>Año</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupo in grupos)
            {
                <tr>
                    <td>@grupo.Grupo</td>
                    <td>@grupo.Anio</td>
                    <td>
                        <button type="button" class="btn btn-outline-info" @onclick="@(()=>AgregarGrupo.InvokeAsync(grupo))">Agregar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    public List<Grupos> grupos;
    [Parameter] public List<Grupos> GruposAgregados { get; set; }
    //[Parameter] public Cursos Curso { get; set; }
    [Parameter] public EventCallback<Grupos> AgregarGrupo { get; set; }

    protected override async Task OnInitializedAsync()
    {

        await CargarGrupos();

    }

    async Task CargarGrupos()
    {
        grupos = await gruposServices.GetGrupos();
    }
}
