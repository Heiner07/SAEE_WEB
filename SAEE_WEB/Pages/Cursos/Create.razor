@inject CursosServices ServicioCursos
@inject NavigationManager Navigation

<Form OnValidSubmit="AgregarCurso" Titulo="Agregando curso" TextoBoton="Agregar" Curso="@curso" GruposAgregados="@GruposAgregados" />

@code {
    Cursos curso = new Cursos();
    List<Grupos> GruposAgregados = new List<Grupos>();

    async Task AgregarCurso()
    {
        curso.IdProfesor = 48;//Cambiar por el id del profesor auntenticado
        foreach(Grupos grupo in GruposAgregados)
        {
            curso.CursosGrupos.Add(new CursosGrupos()
            {
                IdGrupo = grupo.Id
            });
        }
        await ServicioCursos.PostCursos(curso);
        Navigation.NavigateTo("cursos", true);
    }
}
