@page "/evaluaciones"

@{ var list = new List<string> { ".NET", "Python", "Java" }; }
<div class="container">
    <h3>Evaluaciones</h3>
    <form class="form-inline" action="/">
        <div class="form-group">
            <Dropdown TItem="string" OnSelected="@OnSelected">
                <InitialTip>Grupo</InitialTip>
                <ChildContent>
                    <DropdownListItem Item="@list[0]">@list[0]</DropdownListItem>
                    <DropdownListItem Item="@list[1]">@list[1]</DropdownListItem>
                    <DropdownListItem Item="@list[2]">@list[2]</DropdownListItem>
                </ChildContent>
            </Dropdown>
        </div>
        <div class="form-group">
            <Dropdown TItem="string" OnSelected="@OnSelected">
                <InitialTip>Curso</InitialTip>
                <ChildContent>
                    <DropdownListItem Item="@list[0]">@list[0]</DropdownListItem>
                    <DropdownListItem Item="@list[1]">@list[1]</DropdownListItem>
                    <DropdownListItem Item="@list[2]">@list[2]</DropdownListItem>
                </ChildContent>
            </Dropdown>
        </div>
        <div class="form-group">
            <Dropdown TItem="string" OnSelected="@OnSelected">
                <InitialTip>Periodo</InitialTip>
                <ChildContent>
                    <DropdownListItem Item="@list[0]">@list[0]</DropdownListItem>
                    <DropdownListItem Item="@list[1]">@list[1]</DropdownListItem>
                    <DropdownListItem Item="@list[2]">@list[2]</DropdownListItem>
                </ChildContent>
            </Dropdown>
        </div>
    </form>
</div>
@code{
    private void OnSelected(string selection)
    {
        Console.WriteLine(selection);
    }

}

